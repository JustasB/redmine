<%= error_messages_for 'project' %>

<div class="container-fluid">
<!--[form:project]-->
	<div class="row-fluid">
	<div class="span4"><%= f.text_field :name, :required => true, :size => 120, :class=>'input-xlarge' %></div>
	<div class="span4"><%= f.text_field :identifier, :size => 60, :disabled => true, :maxlength => Project::IDENTIFIER_MAX_LENGTH , :class=>'input-xlarge'%></div>
	</div>
	<div class="row-fluid">
	<%= f.text_field :description, :class=>'input-xlarge'%>
	</div>

	<% @project.custom_field_values.each do |value| %>
		<% if value.custom_field.name == 'GitHub repository' %>
	  		<%= custom_field_tag_with_label :project, value %> 
	  		
	  		<a class="popoverlink" href="https://github.com/new" target="_blank" data-toggle="popover" data-trigger="hover" title="" 
	  		data-content="To create a new project on OSB you need a Git repository to host your code: paste here its URL. If you don't have one click on the Octocat to create a new one on GitHub!"
	  		 data-original-title="Project Repository"><icon class="icon-2x icon-github"></icon></a>
		<% end %>
	<% end %>

	<%= call_hook(:view_projects_form, :project => @project, :form => f) %>
</div>


<!--[eoform:project]-->

<% unless @project.identifier_frozen? %>
  <% content_for :header_tags do %>
    <%= javascript_include_tag 'project_identifier' %>
  <% end %>
<% end %>
